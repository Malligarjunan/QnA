%h1
  Badges
#badges
  %p.description
    = t(".description")
  .content
    %ul
      - @badges.each do |badge|
        %li
          .badge_item{:class => badge.type}

            %a.badge{:href => badge_path(:id => badge.token), :title => badge.description, :class => "pjax", :"data-layout" => "pages"}
              =h badge.name

            .counter
              == Ã— #{badge["count"]}
          .badge_description
            =badge.description
          .clear
