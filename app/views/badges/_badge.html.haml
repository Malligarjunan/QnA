.badge_item{:class => badge.type}
  = link_to badge.name, badge_path(badge), {:class => "badge pjax", :title => badge.description, :"data-layout" => "pages"}
  -if !local_assigns[:hide_user] && !local_assigns[:mini]
    %span.user
      =link_to h(truncate(badge.user.login, :length => 20)), user_path(badge.user), :title => h(badge.user.login), :class => "pjax", :"data-layout" => "user"
