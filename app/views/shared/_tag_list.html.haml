-extra_params = local_assigns[:extra_params] || {}

.widget-tags.tag_cloud
  -tag_list.each do |tag|
    - unless current_tags.include? tag["name"]
      %span.tag{:class => "tag_#{h(tag["name"])}"}
        = link_to h("#{tag["name"]} x #{tag["count"].to_i}"), url_for(extra_params.merge(:tags => (current_tags + [tag["name"]]).join("+"))), :rel => "tag",:title => t("questions.tags.tooltip", :tag => tag["name"])

.clear
